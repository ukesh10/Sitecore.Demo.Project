@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel

@if(Model!=null && Model.Item != null){ 
<!--About Start-->
<div class="container-fluid p-5">
    <div class="row gx-5">
        <div class="col-lg-5 mb-5 mb-lg-0" style="min-height: 500px;">
            <div class="position-relative h-100">
                @*<img class="position-absolute w-100 h-100 rounded" src="img/about.jpg" style="object-fit: cover;">*@
                @Html.Sitecore().Field("About Image",Model.Item, new {@class=" position-absolute w-100 h-100 rounded", @style= "object-fit: cover;" })
            </div>
        </div>
        <div class="col-lg-7">
            <div class="mb-4">
                <h5 class="text-primary text-uppercase">@Html.Sitecore().Field("Title")</h5>
                <h1 class="display-3 text-uppercase mb-0">@Html.Sitecore().Field("SubTitle")</h1>
            </div>
            <h4 class="text-body mb-4">@Html.Sitecore().Field("Summary")</h4>
            <p class="mb-4">@Html.Sitecore().Field("Description")</p>
        </div>
    </div>
</div>
<!--About end-->
}